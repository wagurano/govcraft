- unless hide_gnb_and_footer?
  %section#site-header
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target": "#site-header-collapsable", "data-toggle": "collapse", type: "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: root_path }
            우주당

        #site-header-collapsable.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to Campaign.model_name.human, campaigns_path
            %li
              = link_to Discussion.model_name.human,discussions_path
            %li
              = link_to Poll.model_name.human, polls_path
            %li
              = link_to Petition.model_name.human, petitions_path
            %li
              = link_to Archive.model_name.human, archives_path
            %li
              = link_to Memorial.model_name.human, memorials_path
            %li
              = link_to Event.model_name.human, events_path
            %li
              = link_to Article.model_name.human, articles_path

          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to '새소식', weekly_path
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  = render 'users/thumbnail'
                  = current_user.nickname
                  %span.caret
                %ul.dropdown-menu
                  %li
                    = link_to edit_user_registration_path do
                      프로필 수정
                  %li
                    = link_to sign_out_path, method: :delete do
                      로그아웃
            - else
              %li
                = link_to new_user_session_path do
                  %i.fa.fa-sign-in
                  로그인 &middot; 가입
