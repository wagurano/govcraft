= form_for @wiki do |f|
  - if @project.present?
    = f.hidden_field :project_id, value: @project.id

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :body
    ~ f.text_area :body, rows: 10, class: 'form-control redactor'

  .form-group
    = f.label :revision_note
    ~ f.text_field :revision_note, rows: 2, class: 'form-control'

  .form-group
    = f.submit '저장', class: 'btn btn-primary'
