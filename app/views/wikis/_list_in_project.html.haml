%section#wikis-in-project.page-block
  .container
    .panel
      .panel-heading
        %h4
          = local_assigns[:title_label] || @project.try(:component_title, 'wiki')
          %small
            = link_to "#{Wiki.model_name.human} 추가", new_wiki_path(project_id: @project)
      - if wikis.any?
        .panel-body
          %ul.list-group.post-group
            - wikis.each do |wiki|
              %li.list-group-item[wiki]
                = link_to wiki do
                  - if wiki.project
                    .post__project= wiki.project.title
                  %h5.list-group-item-heading
                    = wiki.title
                    - if wiki.comments.count > 0
                      %small
                        (#{wiki.comments.count})
                  .post__meta
                    .row
                      .col-xs-6
                        %span.nickname
                          = wiki.wiki_revisions.last.user.nickname
                      .col-xs-6.text-right
                        %span.text-success
                          %strong
                            %i.fa.fa-edit
                            = wiki.wiki_revisions.count
                        %span
                          %i.fa.fa-eye
                          = wiki.views_count
      - else
        - if @project.present?
          .panel-body
            %small.text-muted
              첫 위키 페이지를 작성해 보세요.
              %br
              = link_to "#{Wiki.model_name.human} 추가하기", new_wiki_path(project_id: @project)
