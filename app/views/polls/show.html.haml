- if params[:mode] == 'widget'
  = render 'widget'
- else
  - cover_image = @poll.cover_image_url(:lg)
  %section.cover-section{ style: "background-image: linear-gradient(rgba(0, 0, 0, .1), rgba(0, 0, 0, .1)), url(#{cover_image})" }
    .container
      = render 'header'
      - if @project
        .cover-section__project
          = link_to @poll.project.title, @poll.project

      %h1.cover-section__title= @poll.title

      %h4.cover-section__users-count
        %span
          %i.fa.fa-user-o
          = @poll.votes_count
          명 투표

      .cover-section__votes
        = render 'votes/panel', poll: @poll, show_voters: true

  %section#poll-block.page-block.post-block
    .container
      .post-block__info
        .row
          .col-xs-8
            %span.post-block__user
              = link_to @poll.user do
                = image_tag @poll.user.image_url, class: 'img-user'
                = @poll.user.nickname
            %span.post-block__date
              = date_f @poll.created_at
            - if can? :edit, @poll
              = link_to '수정', edit_poll_path(@poll)
            - if can? :destroy, @poll
              = link_to '삭제', @poll, method: :delete, data: { confirm: '삭제하시겠습니까?' }
          .col-xs-4.text-right
            조회 #{@poll.views_count}

      .post-block__body
        = raw @poll.body

      .cover-section__votes
        = render 'votes/panel', poll: @poll, show_voters: true

      .post-block__share
        %h4 이 이슈를 친구들에게 알려 주세요
        .share-box

      .post-block__widget
        %h4 이 이슈를 퍼가주세요.
        %input{value: "<iframe width='100%' height='495' src='#{poll_url(@poll, mode: :widget)}' frameborder='0'></iframe>", style: 'width: 100%;'}

      .post-block__comments
        = render 'comments/list', commentable: @poll

      - if @poll.project
        .post-block__project
          %h4 프로젝트
          = render @poll.project
