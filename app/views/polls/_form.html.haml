= form_for @poll do |f|
  - if @project.present?
    = f.hidden_field :project_id, value: @project.id

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :body
    = f.text_area :body, class: 'form-control redactor'

  .form-group
    = f.label :cover_image
    = f.file_field :cover_image, class: 'form-control'

  .form-group
    = f.submit '저장', class: 'btn btn-primary'
